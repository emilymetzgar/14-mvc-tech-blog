<div class="text-center">
    <form class="form update">
        <h2 class="form-group">
            <label for="name">Post Title:</label>
            <input class="form-control" type="text" id="name" name="name" value="{{name}}" {{#unless (isAuthor user_id
                logged_in_user) }} readonly {{/unless}} />
        </h2>
        <div class="form-group">
            <label for="description">Description:</label>
            <textarea class="form-control" type="textarea" id="description" name="description" {{#unless (isAuthor
                user_id logged_in_user) }} readonly {{/unless}}>{{description}}</textarea>
        </div>
        {{#if (isAuthor user_id logged_in_user) }}
        <input type="hidden" name="post" id="post" value="{{id}}" />
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
        <div class="form-group delete">
            <button type="button" class="btn btn-danger" data-id="{{id}}">Delete</button>
        </div>
        {{/if}}
    </form>
    <p><small>Written by {{user.name}} on {{formatDate createdAt}}</small></p>
    <div class="border">
        <h3>Leave a Comment</h3>
        <form class="form post-comment">
            <div class="form-group">
                <label for="comment">Comment:</label>
                <textarea class="form-control" type="textarea" id="comment"></textarea>
            </div>
            <input type="hidden" name="post" id="post" value="{{id}}" />
            <div class="form-group">
                <button class="btn btn-primary" type="submit" id="postComment">Post Comment</button>
            </div>
        </form>
    </div>
    <h3>Comments:</h3>
    {{#each comments as |comment|}}
    <div class="border" id="comment{{comment.id}}">
        <p>{{comment.comment}}</p>
        <p>Written by {{comment.user.name}} on {{formatDate comment.createdAt}}</p>
    </div>
    {{/each}}
</div>
</div>
<script src="../js/post.js"></script>
                            <a class="nav-link" href="/profile" tabindex="0">Dashboard</a>
                        </li>
                        {{#unless logged_in}}
                        <li class="nav-item">
                            <a class="nav-link" href="/login">Login</a>
                        </li>
                        {{/unless}}
                        {{#if logged_in}}

                        <li class="nav-item">
                            <a class="nav-link" href="/logout" id="logout" tabindex="-1">Logout</a>
                        </li>
                        {{/if}}
                    </ul>
                    <form class="d-flex d-md-block d-lg-none" target="./blogSearch">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>
